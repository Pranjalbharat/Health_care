<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    tools:context=".LoginCreatorDetails2">


    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:elevation="10dp"
        android:gravity="center_vertical"
        android:outlineProvider="none"
        app:cardBackgroundColor="#0000"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="false"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/login_as_user"
                android:cropToPadding="false"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.445" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Change profile photo"

                android:textSize="15sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="5dp"
        android:text="Name" />

    <EditText
        android:id="@+id/EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="First Name"
        android:ems="10"
        android:inputType="textPersonName"
        android:labelFor="@id/firstname_text"
        android:text="" />

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="5dp"
        android:text="Bio" />

    <EditText
        android:id="@+id/EditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="First Name"
        android:ems="10"
        android:inputType="textPersonName"
        android:labelFor="@id/firstname_text"
        android:text="" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineProvider="none"
        app:cardBackgroundColor="#0000">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:text="Appointment"
            android:textSize="18dp" />

        <RadioGroup
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="170dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Rb1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:onClick="onRadioButtonClicked"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:onClick="onRadioButtonClicked"
                android:layout_marginLeft="10dp"
                android:text="No" />


        </RadioGroup>

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:layout_marginStart="5dp"
            android:layout_marginTop="45dp"
            android:text="Are you available for online appointment?" />



        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="5dp"
            android:textSize="18dp"
            android:text="Online Consultancy" />
        <RadioGroup
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="170dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Rb2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:onClick="onRadioButtonClicked"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:onClick="onRadioButtonClicked"
                android:text="No" />


        </RadioGroup>

        <TextView
            android:id="@+id/TextView21"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:layout_marginStart="5dp"
            android:layout_marginTop="120dp"
            android:text="Are you available for online consultancy?" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="175dp"
            android:layout_marginStart="5dp"
            android:textSize="18dp"
            android:text="Doctor On Demand" />

        <RadioGroup
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="170dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Rb3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:onClick="onRadioButtonClicked"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:onClick="onRadioButtonClicked"
                android:text="No" />


        </RadioGroup>

        <TextView
            android:id="@+id/Text"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:layout_marginStart="5dp"
            android:layout_marginTop="210dp"
            android:text="Are you available on demand?" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:text="Button" />


    </androidx.cardview.widget.CardView>


</LinearLayout>





